- provide(:title, "Doctor Appointment Add")
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Profile Page
  %body{:style=>"background-color:#white"}
    %header#header
      %nav.navbar.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            -#%a.navbar-brand{:href => "home.html.haml"} UpDoc
            
            #imagebox 
              = link_to image_tag("Logo.png", :style => "height:65px;"), homepage_home_path(:refresh => 'refresh')
          .collapse.navbar-collapse.navbar-right
            %ul.nav.navbar-nav
              %li
                = link_to 'Home', homepage_home_path(:refresh => 'refresh')
              %li
                = link_to 'Sign Up', signup_signup_path()
              %li
                %a= link_to 'Login', login_path()
              %li
                = link_to 'Contact Us', contact_us_path()
  
  .row{:style=>"background-color:white;position:relative;top:120px;"}
    .col-md-12{:style=>"font-size:30px;padding:20px;"} Doctor Appiontment Adder
    .col-md-6.col-md-offset-3{:style=>"font-size:18px;color:red;padding-bottom:15px"}
      = flash[:notice]
    .col-md-6.col-md-offset-3
      
      = form_for(:session, url: docappt_add_path) do |f|
        
        = f.label :docid, "Doctor Email"
        = f.text_field :docid, class: 'form-control'
        = f.label :slot, "Appointment Time Slot"
        = f.text_field :slot, class: 'form-control'
        = f.submit "Add Doc to Appt Table", class: "btn btn-primary"
       
  #emptydiv{:style => "height: 200px"}