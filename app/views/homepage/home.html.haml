!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title UpDoc
  %body
    %header#header
      %nav.navbar.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            -#%a.navbar-brand{:href => "home.html.haml"} UpDoc
            
            #imagebox 
              = link_to image_tag("Logo.png", :style => "height:65px;"), homepage_home_path(:refresh => 'refresh')
          .collapse.navbar-collapse.navbar-right
            %ul.nav.navbar-nav
              %li
                = link_to 'Home', homepage_home_path(:refresh => 'refresh')
              %li
                = link_to 'Sign Up', signup_signup_path()
              %li
                %a= link_to 'Login', login_path()
              %li
                = link_to 'Contact Us', contact_us_path()
    #picture{:style => " position: relative; top: 60px; left: 10px; padding: 70px; width:100%"}
      =image_tag "Updoc_Home1.jpg", :style => "width:100%"
    #feature
      .container
        .row
          .col-md-4.wow.fadeInRight{"data-wow-delay" => "0.3s", "data-wow-offset" => "0"}
            .text-center{:onclick => "showpharmacies()"}
              .hi-icon-wrap.hi-icon-effect
                %i.fa.fa-medkit
                %h4 Nearby Pharmacies
          .col-md-4.wow.fadeInRight{"data-wow-delay" => "0.3s", "data-wow-offset" => "0"}
            #hospital_div{:onclick => "showhospitals()"}
              .text-center
                .hi-icon-wrap.hi-icon-effect
                  %i.fa.fa-plus-square
                  %h4 Nearby Hospitals
                
          .col-md-4.wow.fadeInLeft{"data-wow-delay" => "0.3s", "data-wow-offset" => "0"}
            .text-center{:onclick => "showemergency()"}
              .hi-icon-wrap.hi-icon-effect
                %i.fa.fa-ambulance
                %h4 Emergency Contact Numbers
          
    #medicals{:style =>"height:200px;width:100%;background-color:white;"}
      %table{:style => "border:1px,solid;width:70%;margin: auto;padding:20px;"}
        %thead
          %tr
            %th{:style => "border-bottom:1px solid;"} Name
            %th{:style => "border-bottom:1px solid;"} Street
            %th{:style => "border-bottom:1px solid;"} City
        %tbody
          - @Pharmacys.each do |pharmacy|
            %tr
              %td= pharmacy.name 
              %td= pharmacy.street
              %td= pharmacy.city
    #hospitals.col-md-4.hidden-element{:style =>"height:200px;width:100%;background-color:white;" }
      %table{:style => "border:1px,solid;width:70%;margin: auto;padding:20px;"}
        %thead
          %tr
            %th{:style => "border-bottom:1px solid;"} Name
            %th{:style => "border-bottom:1px solid;"} Street
            %th{:style => "border-bottom:1px solid;"} City
        %tbody
          - @hospitals.each do |hospital|
            %tr
              %td= hospital.name 
              %td= hospital.street
              %td= hospital.city
    #emergency{:style =>"height:200px;width:100%;background-color:white;"}
      %div{:style => "margin:auto;padding:20px;text-align:center;"} Emergency Contact No: +1 607-2324639 , +212 636-184364
    %footer
      .social-icon
        .container
          .col-md-6.col-md-offset-3
      .text-center
        .copyright
          Â© 2018
          = succeed "." do
            %a UpDoc
            %p All Rights Reserved.  
  :javascript
    function  showpharmacies(){
        document.getElementById("hospitals").style.display = "none";
        document.getElementById("emergency").style.display = "none";
        document.getElementById("medicals").style.display = "";
    }

    
    function  showhospitals(){
        document.getElementById("hospitals").style.display = "";
        document.getElementById("medicals").style.display = "none";
        document.getElementById("emergency").style.display = "none";
    }
    
    function  showemergency(){
        document.getElementById("hospitals").style.display = "none";
        document.getElementById("medicals").style.display = "none";
        document.getElementById("emergency").style.display = "";
    }

