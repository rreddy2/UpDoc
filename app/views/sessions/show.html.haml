!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Profile Page
  %body{:style=>"background-color:#CCB"}
    %header#header
      %nav.navbar.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            -#%a.navbar-brand{:href => "home.html.haml"} UpDoc
            
            #imagebox 
              = link_to image_tag("Logo.png", :style => "height:65px;"), homepage_home_path(:refresh => 'refresh')
          .collapse.navbar-collapse.navbar-right
            %ul.nav.navbar-nav
              %li
                = link_to 'Home', homepage_home_path(:refresh => 'refresh')
              %li
                = link_to 'Sign Up', signup_signup_path()
              %li
                %a= link_to 'Log Out', login_path
              %li
                = link_to 'Contact Us', contact_us_path()
    #loginmsg{:style =>"position:relative;top:100px;"} Login successful
    #welcomediv{:style =>"text-align:right;padding:2px;position:relative;top:120px;"} Welcome #{@user[0].first_name} #{@user[0].last_name_string}
    
    #profile{:style => "position:relative;top:130px;height:600px;background-color:white;"}
      .col-md-12{:style =>"font-size:25px;text-align:center;padding:20px;position:relative;background-color:white;"} My Profile
      #profilecard.col-md-4{:style=>"height:220px;background-color:white;border:1px solid;padding:15px;position:relative;left:50px;"}
        #name{:style => "font-size:18px;padding:10px;"} Name : #{@user[0].first_name} #{@user[0].last_name_string}
        #address{:style => "font-size:18px;padding:10px;"} Address : #{@user[0].address} 
        #Docid{:style => "font-size:18px;padding:10px;"} Patient Id : #{@user[0].pnumber} 
      #profiledata.col-md-11{:style=>"position:relative;left:50px;padding-left:0px;"}  
        #profiles.col-md-4{:style =>"height:250px;width:100%;background-color:white;border:1px solid;position:relative;top:25px;" }          
          #mydoc{:style =>"font-size:16px;padding:10px;"}My Doctor : #{@mydoc[0].first_name} #{@mydoc[0].last_name_string} 
          #medicalrecords{:style =>"font-size:16px;padding:20px;"}= link_to "View My Medical Records",  profile_medicalrecords_path(:pnumber=> "#{@user[0].pnumber}")         
          #myappt{:style =>"font-size:16px;padding:20px;"}= link_to "Make an Appointment",  appointment_appointment_path(:pnumber=> "#{@user[0].pnumber}")         
              
              